<div class="list-group">
    <h3>Съобщения</h3>
    @foreach (var absences in Model)
    {
        <a class="list-group-item list-group-item-action" asp-action="Details" asp-controller="Message" asp-route-id="@absences.Id">
            <p>@absences.Title</p>
            <p>Изпратено от: @absences.SentByFirstName @absences.SentByLastName - @absences.SentByEmail</p>
        </a>
    }
</div>