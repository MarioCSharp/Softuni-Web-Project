@using Better_Shkolo.Models.Student;
@model IEnumerable<StudentDisplayModel>

<div class="list-group">
    @foreach (var student in Model)
    {
        <p class="list-group-item list-group-item-action">
            @student.FirstName @student.LastName - @student.Email |
            <a asp-action="ById" asp-controller="Absences" asp-route-studentId="@student.Id">View absences</a>
            <a asp-action="ById" asp-controller="Mark" asp-route-studentId="@student.Id">View marks</a>
            <a asp-action="ById" asp-controller="Review" asp-route-studentId="@student.Id">View reviews</a>
        </p>
    }
</div>
