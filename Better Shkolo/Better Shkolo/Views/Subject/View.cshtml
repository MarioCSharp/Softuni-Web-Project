@{
    Layout = "Layout";
}
@using Better_Shkolo.Models.Subject;
@model SubjectViewModel

<link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/bootstrap.min.css">
<br />
<br />
<br />
<div class="list-group grey-bg container-fluid">
    @foreach (var subject in Model.Subjects)
    {
        <p class="list-group-item list-group-item-action">
            @subject.Name
            @if(User.IsInRole("Administrator") || User.IsInRole("Director"))
            {
                <a asp-controller="Subject" asp-action="Delete" asp-route-id="@subject.Id" class="btn btn-danger">Delete</a>
                <a asp-controller="Subject" asp-action="Edit" asp-route-id="@subject.Id" class="btn btn-warning">Edit</a>
            }

            <a asp-controller="Student" asp-action="Display" asp-route-id="@subject.Id" class="btn btn-primary">Students</a>
        </p>
    }
</div>

