@using Better_Shkolo.Models.Subject;
@model SubjectCreateModel

<h3 class="text-center">@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">

                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TeacherId"></label>
                    <select asp-for="TeacherId" class="form-control">
                        @foreach (var user in Model.TeachersInSchool)
                        {
                            <option value="@user.Id">@user.FirstName @user.LastName - @user.Email</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="GradeId"></label>
                    <select asp-for="GradeId" class="form-control">
                        @foreach (var user in Model.GradesInSchool)
                        {
                            <option value="@user.Id">@user.GradeName</option>
                        }
                    </select>
                </div>

                <input type="hidden" asp-for="SchoolId" />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}