@model TeacherHomeModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Добавяне на урок</title>
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .card {
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
            }

        .card-body {
            display: flex;
            flex-direction: column;
            align-items: center;
            padding: 20px;
        }

        .card-title {
            margin-top: 10px;
            font-size: 1.2rem;
        }

        .card-text {
            margin-top: 5px;
            font-size: 1.5rem;
            color: #007bff;
        }
        <style>
    a {
        text-decoration: none;
    }

    h2 {
        text-align: right;
    }

    body {
        margin-top: 0px;
        background: #FAFAFA;
    }

    .order-card {
        color: #fff;
    }

    .bg-c-blue {
        background: linear-gradient(45deg,#4099ff,#73b4ff);
    }

    .bg-c-green {
        background: linear-gradient(45deg,#FF0000,#EE4B2B);
    }

    .bg-c-yellow {
        background: linear-gradient(45deg,#FFB64D,#ffcb80);
    }

    .bg-c-pink {
        background: linear-gradient(45deg,#9F2B68,#BF40BF);
    }


    .card {
        border-radius: 5px;
        -webkit-box-shadow: 0 1px 2.94px 0.06px rgba(4,26,55,0.16);
        box-shadow: 0 1px 2.94px 0.06px rgba(4,26,55,0.16);
        border: none;
        margin-bottom: 30px;
        -webkit-transition: all 0.3s ease-in-out;
        transition: all 0.3s ease-in-out;
    }

        .card .card-block {
            padding: 25px;
        }

    .order-card i {
        font-size: 26px;
    }

    .f-left {
        float: left;
    }

    .f-right {
        float: right;
    }

    .custom-margin {
        margin-right: 75px; /* Adjust the value to your preferred space */
    }
</style>
    </style>
</head>
@{
    Layout = "";
}
<body>
    <div class="wrapper">
        <aside id="sidebar">
            <div class="d-flex">
                <button class="toggle-btn" type="button">
                    <i class="lni lni-grid-alt"></i>
                </button>
                <div class="sidebar-logo">
                    <a asp-action="Index" asp-controller="Home"><img src="/logof.png" style="height:35px;" /></a>
                </div>
            </div>
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a asp-action="Index" asp-controller="Home" class="sidebar-link">
                        <i class="lni lni-home"></i>
                        <span>Начало</span>
                    </a>
                </li>
                @if (await service.IsGradeTeacher())
                {
                    <li class="sidebar-item">
                        <a asp-action="Students" asp-controller="Grade" class="sidebar-link">
                            <i class="lni lni-users"></i>
                            <span>Моят клас</span>
                        </a>
                    </li>
                }
                @if (User.IsInRole("Teacher"))
                {
                    <li class="sidebar-item">
                        <a asp-action="MyGrades" asp-controller="Grade" class="sidebar-link">
                            <i class="lni lni-clipboard"></i>
                            <span>Дневник</span>
                        </a>
                    </li>
                }
                @if (User.IsInRole("Teacher") || User.IsInRole("Director"))
                {
                    <li class="sidebar-item">
                        <a asp-action="Mine" asp-controller="Consultation" class="sidebar-link">
                            <i class="lni lni-book"></i>
                            <span>Справки</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-action="Index" asp-controller="Document" class="sidebar-link">
                            <i class="lni lni-folder"></i>
                            <span>Документи</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                           data-bs-target="#auth" aria-expanded="false" aria-controls="auth">
                            <i class="lni lni-briefcase"></i>
                            <span>Дейности</span>
                        </a>
                        <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a asp-action="Add" asp-controller="Activity" class="sidebar-link">
                                    <i class="lni lni-plus"></i> Добави дейност
                                </a>
                            </li>
                            <li class="sidebar-item">
                                <a asp-action="Schedule" asp-controller="Activity" class="sidebar-link">
                                    <i class="lni lni-calendar"></i> Училищен календар
                                </a>
                            </li>
                        </ul>
                    </li>
                }
                @if (User.IsInRole("Parent") || User.IsInRole("Student"))
                {
                    <li class="sidebar-item">
                        <a asp-action="Schedule" asp-controller="Table" class="sidebar-link">
                            <i class="lni lni-calendar"></i>
                            <span>Седмична програма</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-action="Subjects" asp-controller="Lesson" class="sidebar-link">
                            <i class="lni lni-book"></i>
                            <span>Уроци</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-action="Schedule" asp-controller="Activity" class="sidebar-link">
                            <i class="lni lni-calendar"></i>
                            <span>Училищен календар</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-action="Profile" asp-controller="Student" class="sidebar-link">
                            <i class="lni lni-user"></i>
                            <span>Ученически профил</span>
                        </a>
                    </li>
                }
                <li class="sidebar-item">
                    <a asp-action="Index" asp-controller="Newspaper" class="sidebar-link">
                        <i class="lni lni-library"></i>
                        <span>Училищен вестник</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#messages" aria-expanded="false" aria-controls="messages">
                        <i class="lni lni-envelope"></i>
                        <span>Съобщения</span>
                    </a>
                    <ul id="messages" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a asp-action="Index" asp-controller="Message" class="sidebar-link">
                                <i class="lni lni-envelope"></i> Съобщения
                            </a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-action="Send" asp-controller="Message" class="sidebar-link">
                                <i class="lni lni-popup"></i> Изпрати съобщение
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="sidebar-item">
                    <a href="/Erasmus/Index" class="sidebar-link">
                        <i class="lni lni-world"></i>
                        <span>Еразъм+</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-footer">
                <a asp-action="MyProfile" asp-controller="Account" class="sidebar-link">
                    <i class="lni lni-user"></i>
                    <span>Профил</span>
                </a>
                <a asp-action="Logout" asp-controller="Account" class="sidebar-link">
                    <i class="lni lni-exit"></i>
                    <span>Излизане</span>
                </a>
            </div>
        </aside>
        <div class="main p-3">
            <div id="elements">
                <br />
                <br />
                <div class="container mt-5">
                    <div class="row">
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <i class="fas fa-graduation-cap fa-3x mb-3" style="color: blue"></i>
                                    <h5 class="card-title">Успех на училище</h5>
                                    <p class="card-text">@Model.Success</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <i class="fas fa-user-slash fa-3x mb-3" style="color: red"></i>
                                    <h5 class="card-title">Отсъствия</h5>
                                    <p class="card-text">@Model.Absences</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <i class="fas fa-star fa-3x mb-3" style="color: gold"></i>
                                    <h5 class="card-title">Отзиви</h5>
                                    <p class="card-text">@Model.Reviews</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card text-center">
                                <div class="card-body">
                                    <i class="fas fa-file-alt fa-3x mb-3" style="color: mediumpurple"></i>
                                    <h5 class="card-title">Тестове</h5>
                                    <p class="card-text">@Model.Tests</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <br />
                <br />
                <br />
                <br />

                <div class="d-flex justify-content-center align-items-center">
                    <div class="col-md-6 custom-margin h-100" style="max-width: 500px;">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="box">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <h1><i class="fas fa-award text-warning"></i> Класове с най-висок успех</h1>
                                        <div class="d-flex flex-row gap-3">
                                            <i class="fas fa-star text-primary"></i>
                                            <i class="fas fa-star text-primary"></i>
                                            <i class="fas fa-star text-primary"></i>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="bg-light p-3 rounded">
                                                <p><i class="fas fa-sort-numeric-up-alt text-success"></i> @Model.FirstPlaceSuccess.Item1: @Model.FirstPlaceSuccess.Item2</p>
                                                <p><i class="fas fa-graduation-cap text-info"></i> @Model.SecondPlaceSuccess.Item1: @Model.SecondPlaceSuccess.Item2</p>
                                                <p><i class="fas fa-graduation-cap text-danger"></i> @Model.ThirdPlaceSuccess.Item1: @Model.ThirdPlaceSuccess.Item2</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6 custom-margin h-100" style="max-width: 500px;">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="box">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <!-- Changed the crown icon to a book icon for the title -->
                                        <h1><i class="fas fa-book text-warning"></i> Класове с най-много отсъствия</h1>
                                        <div class="d-flex flex-row gap-3">
                                            <!-- Changed the heart icons to star icons for decoration -->
                                            <i class="fas fa-star text-warning"></i>
                                            <i class="fas fa-star text-warning"></i>
                                            <i class="fas fa-star text-warning"></i>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="bg-light p-3 rounded">
                                                <p><i class="fas fa-trophy text-success"></i> @Model.FirstPlaceAbsences.Item1: @Model.FirstPlaceAbsences.Item2</p>
                                                <p><i class="fas fa-graduation-cap text-info"></i> @Model.SecondPlaceAbsences.Item1: @Model.SecondPlaceAbsences.Item2</p>
                                                <p>
                                                    <i class="fas fa-star text-danger"></i>
                                                    @Model.ThirdPlaceAbsences.Item1: @Model.ThirdPlaceAbsences.Item2
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
    <script src="/js/home.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
</body>
</html>