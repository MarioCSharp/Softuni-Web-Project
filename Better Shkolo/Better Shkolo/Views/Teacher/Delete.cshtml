@using Better_Shkolo.Models.Grade;
@model GradeDeleteModel

<h3 class="text-center">@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="TeacherId"></label>
                    <select asp-for="TeacherId" class="form-control">
                        @foreach (var user in Model.Teachers)
                        {
                            <option value="@user.Id">@user.FirstName @user.LastName - @user.Email</option>
                        }
                    </select>
                </div>

                <input type="hidden" asp-for="GradeName" />
                <input type="hidden" asp-for="GradeSpecialty" />
                <input type="hidden" asp-for="SchoolId" />
                <input type="hidden" asp-for="OldTeacherId" />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Delete</button>
                </div>
            </form>
        </section>
    </div>
</div>
