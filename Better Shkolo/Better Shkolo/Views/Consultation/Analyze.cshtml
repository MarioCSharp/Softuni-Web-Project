@using Better_Shkolo.Models.Consultation
@model ConsultationAnalyzeModel
@using Better_Shkolo.Services.AccountService;
@inject IAccountService service
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sidebar With Bootstrap</title>
    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/bootstrap-extended.min.css">
    <link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/fonts/simple-line-icons/style.min.css">
    <link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/colors.min.css">
    <link rel="stylesheet" type="text/css" href="https://pixinvent.com/stack-responsive-bootstrap-4-admin-template/app-assets/css/bootstrap.min.css">
</head>
@{
    Layout = "";
}
<body>
    <div class="wrapper">
        <aside id="sidebar">
            <div class="d-flex">
                <button class="toggle-btn" type="button">
                    <i class="lni lni-grid-alt"></i>
                </button>
                <div class="sidebar-logo">
                    <img src="/logof.png" style="height:35px;" />
                </div>
            </div>
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a asp-action="Index" asp-controller="Home" class="sidebar-link">
                        <i class="lni lni-agenda"></i>
                        <span>Начало</span>
                    </a>
                </li>
                @if (await service.IsGradeTeacher())
                {
                    <li class="sidebar-item">
                        <a asp-action="Students" asp-controller="Grade" class="sidebar-link">
                            <i class="lni lni-layout"></i>
                            <span>Моят клас</span>
                        </a>
                    </li>
                }
                @if (User.IsInRole("Teacher") || User.IsInRole("Director"))
                {
                    <li class="sidebar-item">
                        <a asp-action="Mine" asp-controller="Consultation" class="sidebar-link">
                            <i class="lni lni-layout"></i>
                            <span>Справки</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#auth" aria-expanded="false" aria-controls="auth">
                            <i class="lni lni-protection"></i>
                            <span>Дейности</span>
                        </a>
                        <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                            <li class="sidebar-item">
                                <a asp-action="Add" asp-controller="Activity" class="sidebar-link">Добави дейност</a>
                            </li>
                            <li class="sidebar-item">
                                <a asp-action="Schedule" asp-controller="Activity" class="sidebar-link">Училищен календар</a>
                            </li>
                        </ul>
                    </li>
                }
                @if (User.IsInRole("Parent") || User.IsInRole("Student"))
                {
                    <li class="sidebar-item">
                        <a asp-action="Schedule" asp-controller="Table" class="sidebar-link">
                            <i class="lni lni-layout"></i>
                            <span>Седмична програма</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-action="Schedule" asp-controller="Activity" class="sidebar-link">
                            <i class="lni lni-layout"></i>
                            <span>Училищен календар</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a asp-action="Profile" asp-controller="Student" class="sidebar-link">
                            <i class="lni lni-layout"></i>
                            <span>Ученически профил</span>
                        </a>
                    </li>
                }
                <li class="sidebar-item">
                    <a href="#" class="sidebar-link collapsed has-dropdown" data-bs-toggle="collapse"
                       data-bs-target="#auth" aria-expanded="false" aria-controls="auth">
                        <i class="lni lni-protection"></i>
                        <span>Съобщения</span>
                    </a>
                    <ul id="auth" class="sidebar-dropdown list-unstyled collapse" data-bs-parent="#sidebar">
                        <li class="sidebar-item">
                            <a asp-action="Index" asp-controller="Message" class="sidebar-link">Съобщения</a>
                        </li>
                        <li class="sidebar-item">
                            <a asp-action="Send" asp-controller="Message" class="sidebar-link">Изпрати съобщение</a>
                        </li>
                    </ul>
                </li>
            </ul>
            <div class="sidebar-footer">
                <a asp-action="MyProfile" asp-controller="Account" class="sidebar-link">
                    <i class="lni lni-user"></i>
                    <span>Профил</span>
                </a>
                <a asp-action="Logout" asp-controller="Account" class="sidebar-link">
                    <i class="lni lni-exit"></i>
                    <span>Излизане</span>
                </a>
            </div>
        </aside>
        <div class="main p-3">
            <div id="elements">
                <br />
                <br />
                <h3>Анализ оценки от @Model.Type @Model.GradeName</h3>
                <a asp-action="ToPdf" asp-controller="Consultation" asp-route-type="@Model.Type"
                   asp-route-gradeId="@Model.GradeId" asp-route-userId="@Model.UserId" asp-route-term="@Model.Term">
                    <i class="fa-solid fa-file-pdf font-large-1" style="color: #ff0000;"></i>
                </a>
                @foreach (var entry in Model.SubjectByConsultation)
                {
                    <p>@entry.Key: @entry.Value</p>
                }
                <strong>Среден успех: @Model.Average</strong>
                <input type="hidden" asp-for="@Model.GradeId" />
                <input type="hidden" asp-for="@Model.UserId" />
                <input type="hidden" asp-for="@Model.Term" />
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>
    <script src="/js/home.js"></script>
</body>
</html>
