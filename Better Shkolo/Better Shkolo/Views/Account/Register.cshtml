@model RegisterModel
<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex align-items-center justify-content-center h-100">
            <div class="col-md-8 col-lg-7 col-xl-6">
                <img src="/logof.png"
                     class="img-fluid" alt="Phone image">
            </div>
            <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
                <form method="post">
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <label asp-for="FirstName" class="form-label" for="registerName"></label>
                        <input asp-for="FirstName" type="text" id="registerName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-outline mb-4">
                        <label asp-for="LastName" class="form-label" for="registerName"></label>
                        <input asp-for="LastName" type="text" id="registerName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="form-outline mb-4">
                        <label asp-for="Email" class="form-label" for="registerName"></label>
                        <input asp-for="Email" type="email" id="registerName" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-outline mb-4">
                        <label asp-for="Password" class="form-label" for="registerName"></label>
                        <input asp-for="Password" type="password" id="registerName" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-outline mb-4">
                        <label asp-for="PasswordRepeat" class="form-label" for="registerName"></label>
                        <input asp-for="PasswordRepeat" type="password" id="registerName" class="form-control" />
                        <span asp-validation-for="PasswordRepeat" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Регистация</button>
                </form>
                <div class="text-center">
                    <p>Имаш регистрация? <a asp-action="Login" asp-controller="Account">Натисни тук</a></p>
                </div>
            </div>
        </div>
    </div>
</section>