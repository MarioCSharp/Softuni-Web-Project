@using Better_Shkolo.Models.Mark;
@model IEnumerable<MarkDisplayModel>

<div class="list-group">
    @foreach (var mark in Model)
    {
        <p class="list-group-item list-group-item-action">
            @mark.SubjectName |
            @foreach (var item in mark.Marks)
            {
                @if (item.Value == 6)
                {
                    <button id="six">@item.Value </button>
                }
                @if (item.Value == 5)
                {
                    <button id="five">@item.Value </button>
                }
                @if (item.Value == 4)
                {
                    <button id="four">@item.Value </button>
                }
                @if (item.Value == 3)
                {
                    <button id="three">@item.Value </button>
                }
                @if (item.Value == 2)
                {
                    <button id="two">@item.Value </button>
                }
            }
        </p>
    }
</div>

<style>
    #six{
        background-color: mediumseagreen;
        border-color: mediumseagreen;
        color:white;
    }
    #five {
        background-color: dodgerblue;
        border-color: dodgerblue;
        color: white;
    }
    #four{
        background-color: orange;
        border-color: orange;
        color:white;
    }
    #three {
        background-color: #f2784b;
        border-color: #f2784b;
        color: white;
    }
    #two {
        background-color: #e7505a;
        border-color: #e7505a;
        color: white;
    }
</style>
